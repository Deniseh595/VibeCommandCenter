<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape = "oval"
            android:height="60dp"
            android:width = "60dp">

            <solid android:color="@color/switchtrackdisable" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:height="60dp"
            android:width = "60dp"
            android:shape = "oval">
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item>
        <shape
            android:shape = "oval"
            android:height="60dp"
            android:width = "60dp">

            <solid android:color="@color/switchtrackdisable" />
        </shape>
    </item>

</selector>