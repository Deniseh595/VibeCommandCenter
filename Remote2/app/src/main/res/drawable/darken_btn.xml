<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:height="30dp"
                android:width = "30dp">
                <shape android:shape="oval">
                    <solid android:color="@color/switchtrackdisable" />
                </shape>
            </item>
            <item
                android:start="1dp"
                android:top="1dp"
                android:width="28dp"
                android:height="28dp">
                <bitmap android:src="@drawable/ic_bright4"
                    android:color = "@color/icon_color"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:height="30dp"
                android:width = "30dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimaryDark" />
                </shape>
            </item>
            <item
                android:start="1dp"
                android:top="1dp"
                android:width="28dp"
                android:height="28dp">
                <bitmap android:src="@drawable/ic_bright4"
                    android:color = "@color/icon_color"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:height="30dp"
                android:width = "30dp">
                <shape android:shape="oval">
                    <solid android:color="@color/switchtrackdisable" />
                </shape>
            </item>
            <item
                android:start="1dp"
                android:top="1dp"
                android:width="28dp"
                android:height="28dp">
                <bitmap android:src="@drawable/ic_bright4"
                    android:color = "@color/icon_color"/>
            </item>
        </layer-list>
    </item>
</selector>